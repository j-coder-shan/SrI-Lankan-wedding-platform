{
	"info": {
		"name": "Analytics Service",
		"description": "Analytics Service API Collection for Wedding Platform",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get Vendor Performance",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-Auth-User-Id",
						"value": "1",
						"type": "text"
					}
				],
				"url": {
					"raw": "http://localhost:8087/api/analytics/vendor/performance?period=LAST_7_DAYS",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8087",
					"path": [
						"api",
						"analytics",
						"vendor",
						"performance"
					],
					"query": [
						{
							"key": "period",
							"value": "LAST_7_DAYS",
							"description": "Options: LAST_7_DAYS, LAST_30_DAYS, LAST_90_DAYS, ALL_TIME"
						}
					]
				},
				"description": "Get vendor performance analytics (booking count, paid invoices, unpaid invoices, revenue) for the authenticated vendor"
			},
			"response": []
		},
		{
			"name": "Get Admin Revenue Report",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-Auth-User-Id",
						"value": "999",
						"type": "text",
						"description": "Admin user ID"
					}
				],
				"url": {
					"raw": "http://localhost:8087/api/analytics/admin/revenue?period=LAST_30_DAYS",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8087",
					"path": [
						"api",
						"analytics",
						"admin",
						"revenue"
					],
					"query": [
						{
							"key": "period",
							"value": "LAST_30_DAYS",
							"description": "Options: LAST_7_DAYS, LAST_30_DAYS, LAST_90_DAYS, ALL_TIME"
						}
					]
				},
				"description": "Get admin revenue report showing total revenue, booking counts, average invoice value"
			},
			"response": []
		}
	]
}
